<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_image_shimmer"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:background="?attr/colorPrimaryContainer"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/tv_name_shimmer"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:background="?attr/colorPrimaryContainer"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_image_shimmer" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/tv_species_shimmer"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="32dp"
            android:background="?attr/colorPrimaryContainer"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium"
            app:layout_constraintEnd_toEndOf="@id/tv_name_shimmer"
            app:layout_constraintStart_toStartOf="@id/tv_name_shimmer"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_shimmer" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/tv_gender_shimmer"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="48dp"
            android:background="?attr/colorPrimaryContainer"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium"
            app:layout_constraintEnd_toEndOf="@id/tv_species_shimmer"
            app:layout_constraintStart_toStartOf="@id/tv_species_shimmer"
            app:layout_constraintTop_toBottomOf="@+id/tv_species_shimmer" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>